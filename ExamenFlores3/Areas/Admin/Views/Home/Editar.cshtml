@model ExamenFlores3.Areas.Admin.Models.ViewModels.EditarViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "Layout";
}
<form>
    <h2 class="titulo">Editar una flor</h2>
    <br />
    <div class="entrada">

        <label>Nombre:</label><input type="text" id="txtNombre" /><br />
        <label>Origen:</label><input type="text" id="txtOrigen" /><br />
        <label>Descripción:</label><textarea rows="5" cols="20" id="txtDescripción" style="width:100%;">
</textarea><br />
        <input type="file" /><br />
        <input type="submit" value="Guardar Flor" />
        <a href="index.html"><input type="button" value="Cancelar" /></a>
        <div class="errores">@Html.ValidationSummary(true)</div>
    </div>

</form>